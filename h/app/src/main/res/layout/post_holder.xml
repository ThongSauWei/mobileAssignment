<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="450dp"
        android:layout_marginTop="40dp"
        app:cardBackgroundColor="@color/post"
        app:cardCornerRadius="30dp"
        app:cardElevation="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgProfilePostHolder"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="48dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/profile_pic_2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvNamePostHolder"
                android:layout_width="44dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:fontFamily="@font/caveat"
                android:text="Erika"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/imgProfilePostHolder"
                app:layout_constraintStart_toEndOf="@+id/imgProfilePostHolder"
                app:layout_constraintTop_toTopOf="@+id/imgProfilePostHolder" />

            <TextView
                android:id="@+id/tvDateTimePostHolder"
                android:layout_width="109dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/caveat"
                android:text="24/3/2024  2:02PM"
                android:textColor="@color/sub_text"
                app:layout_constraintBaseline_toBaselineOf="@+id/tvNamePostHolder"
                app:layout_constraintEnd_toEndOf="parent" />

            <View
                android:id="@+id/separatorPostHolder"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_marginTop="8dp"
                android:background="@color/separator"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imgProfilePostHolder" />

            <ImageView
                android:id="@+id/imgPostPostHolder"
                android:layout_width="258dp"
                android:layout_height="214dp"
                android:src="@drawable/post"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/separatorPostHolder" />

            <TextView
                android:id="@+id/tvPostTitlePostHolder"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="-15dp"
                android:fontFamily="@font/caveat"
                android:text="HAHA title"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/imgPostPostHolder"
                app:layout_constraintTop_toBottomOf="@+id/imgPostPostHolder" />

            <TextView
                android:id="@+id/tvPostContentPostHolder"
                android:layout_width="258dp"
                android:layout_height="47dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/caveat"
                android:text="I am blah bala baajajaja hbaba acyc aauh ahaah aasjncabca bcasjca"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@+id/imgPostPostHolder"
                app:layout_constraintStart_toStartOf="@+id/imgPostPostHolder"
                app:layout_constraintTop_toBottomOf="@+id/tvPostTitlePostHolder" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewCategoryPostHolder"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="#FFE8AE"
                app:cardCornerRadius="15dp"
                app:cardElevation="5dp"
                app:layout_constraintStart_toStartOf="@+id/tvPostContentPostHolder"
                app:layout_constraintTop_toBottomOf="@+id/tvPostContentPostHolder">

                <TextView
                    android:id="@+id/tvCategoryPostHolder"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/caveat"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Assignment"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewCategory2PostHolder"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_marginStart="16dp"
                app:cardBackgroundColor="#FF9C26"
                app:cardCornerRadius="15dp"
                app:cardElevation="5dp"
                app:layout_constraintBottom_toBottomOf="@+id/cardViewCategoryPostHolder"
                app:layout_constraintStart_toEndOf="@+id/cardViewCategoryPostHolder"
                app:layout_constraintTop_toTopOf="@+id/cardViewCategoryPostHolder">

                <TextView
                    android:id="@+id/tvCategory2PostHolder"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/caveat"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Visual Learning"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>