<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".Settings">

    <ImageView
        android:id="@+id/btnBackSettings"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvSettingsSettings"
        android:layout_width="122dp"
        android:layout_height="51dp"
        android:layout_marginStart="54dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/caveat"
        android:text="@string/settings"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/btnBackSettings"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgSettingsSettings"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="54dp"
        android:src="@drawable/outline_settings_24"
        app:layout_constraintEnd_toStartOf="@+id/btnTickSettings"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/btnTickSettings"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/tick"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/separatorSettings"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginTop="32dp"
        android:background="@color/separator"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSettingsSettings" />

    <Button
        android:id="@+id/btnAboutUsSettings"
        android:layout_width="229dp"
        android:layout_height="71dp"
        android:backgroundTint="@android:color/transparent"
        android:fontFamily="@font/caveat"
        android:text="@string/setting_about_us"
        android:textColor="@color/black"
        android:textSize="32sp"
        app:icon="@drawable/baseline_info_24"
        app:iconSize="40dp"
        app:iconTint="@color/icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/separatorSettings" />

    <View
        android:id="@+id/separator2Settings"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="@color/separator"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAboutUsSettings" />

    <Button
        android:id="@+id/btnContactUsSettings"
        android:layout_width="240dp"
        android:layout_height="71dp"
        android:backgroundTint="@android:color/transparent"
        android:fontFamily="@font/caveat"
        android:text="@string/setting_contact_us"
        android:textColor="@color/black"
        android:textSize="32sp"
        app:icon="@drawable/baseline_contact_page_24"
        app:iconSize="40dp"
        app:iconTint="@color/icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/separator2Settings" />

    <View
        android:id="@+id/separator3Settings"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="@color/separator"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnContactUsSettings" />

    <ImageView
        android:id="@+id/imgLanguageSettings"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="24dp"
        android:src="@drawable/baseline_translate_24"
        app:layout_constraintBottom_toTopOf="@+id/separator4Settings"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/separator3Settings" />

    <TextView
        android:id="@+id/tvLanguageSettings"
        android:layout_width="114dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/caveat"
        android:text="@string/setting_language"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/separator4Settings"
        app:layout_constraintStart_toEndOf="@+id/imgLanguageSettings"
        app:layout_constraintTop_toBottomOf="@+id/separator3Settings" />

    <Spinner
        android:id="@+id/ddlLanguageSettings"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/spinner_bg"
        android:dropDownWidth="wrap_content"
        android:elevation="8dp"
        android:entries="@array/language_array"
        android:paddingStart="10dp"
        android:popupBackground="@drawable/spinner_dropdown_bg"
        app:layout_constraintBottom_toTopOf="@+id/separator4Settings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/separator3Settings" />

    <View
        android:id="@+id/separator4Settings"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="@color/separator"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="71dp"
        app:layout_constraintTop_toBottomOf="@+id/separator3Settings" />

</androidx.constraintlayout.widget.ConstraintLayout>