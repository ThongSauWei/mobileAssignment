<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imgProfileCommentHolder"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/profile_pic_2" />

    <TextView
        android:id="@+id/tvCommentCommentHolder"
        android:layout_width="279dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/caveat"
        android:gravity="center_vertical"
        android:text="I am blah bala baajajaja    hbaba   acyc aauh ahaah aasjncabca  bcasjca"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/imgProfileCommentHolder"
        app:layout_constraintStart_toEndOf="@+id/imgProfileCommentHolder"
        app:layout_constraintTop_toTopOf="@+id/imgProfileCommentHolder" />

    <View
        android:id="@+id/separatorCommentHolder"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:background="@color/separator"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgProfileCommentHolder" />

</androidx.constraintlayout.widget.ConstraintLayout>